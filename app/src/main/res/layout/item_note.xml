<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/shape_item_note"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:id="@+id/tv_title"
      android:textSize="24sp"
      android:textStyle="bold"
      android:maxLength="20"
      tools:text=""
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/iv_icon_category"
      app:layout_constraintBottom_toBottomOf="@+id/iv_icon_category"
      app:layout_constraintEnd_toStartOf="@+id/iv_icon_category" />

  <ImageView
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:padding="5dp"
      app:srcCompat="@android:drawable/ic_menu_edit"
      android:id="@+id/iv_icon_category"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_date" />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:hint="@string/Input_note"
      android:id="@+id/et_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/iv_icon_category" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:id="@+id/tv_date"
      tools:text="12.34.1029"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent" />


  />
</androidx.constraintlayout.widget.ConstraintLayout>